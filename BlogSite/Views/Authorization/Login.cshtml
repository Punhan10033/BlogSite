@using DTO.UserDto
@model UserLoginDto
@{
	ViewData["Title"] = "View";
	Layout = "~/Views/Shared/UserLayout.cshtml";
}


<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Sign In Now</h3>
		<div class="row inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				<form asp-action="Login" asp-controller="Authorization">
					<div class="text-danger" asp-validation-summary="All"></div>
					<div class="form-group">
						<label asp-for="Authentication.Email" class="mb-2">Email address</label>
						<input type="email" class="form-control" asp-for="Authentication.Email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="" required="">
						<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
					</div>
					<div class="form-group">
						<label asp-for="Authentication.Password" class="mb-2">Password</label>
						<input type="password" class="form-control" asp-for="Authentication.Password" id="exampleInputPassword1" placeholder="" required="">
					</div>
					<div class="form-check mb-2">
						<input type="checkbox" class="form-check-input" id="exampleCheck1">
						<label class="form-check-label" for="exampleCheck1">Check me out</label>
					</div>
					<input type="submit" class="btn btn-primary submit mb-4">
					<p><a href="/Authorization/Registration"> Don't have an account?</a></p>
				</form>
			</div>
		</div>
	</div>
</section>